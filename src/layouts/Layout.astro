---
// Components
import { Header, Footer } from "@/components/shared";
import { Seo, FontPreloader, Favicon, ThemeMeta } from "@/components/common";

// Styles
import "@/styles/global.css";

// Types
import type { SeoMeta } from "@/data/seo";
import { Stars } from "@/components/decorative";

const { seo } = Astro.props as { seo: SeoMeta };
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta charset="UTF-8" />

    <ThemeMeta color="black" />
    <FontPreloader />
    <Seo {...seo} />
    <Favicon />
  </head>
  <body class="bg-black">
    <div
      class="bg-gradient-dark fixed top-0 left-0 -z-10 h-dvh w-full object-cover"
    >
    </div>
    <Stars className="fixed top-0 z-0 h-dvh object-cover" />
    <Header className="" />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    max-width: 1920px;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    min-width: 320px;
  }
</style>
