---
// Components
import { Content, LinkButton } from "@/components/shared";
import { Image } from "astro:assets";
import ParallaxElement from "@/components/shared/ParallaxElement";
import { AnimateIn } from "@/components/decorative";

// Images
import logo from "@/assets/images/lunar-lifts-logo.png";
import planet from "@/assets/images/decorative/planet.svg";
import { NotebookPen } from "lucide-react";

const { className } = Astro.props as { className: string };
---

<section
  class={`bg-lunar-white py-24 md:py-32 ${className} relative overflow-clip`}
>
  <ParallaxElement
    className="absolute -top-50 -left-250 transition-all duration-500 md:-left-200"
    client:load
  >
    <Image
      src={planet}
      alt=""
      class="opacity-3"
      style={{
        background: "none",
      }}
      loading="eager"
    />
  </ParallaxElement>
  <Content>
    <div class="relative">
      <div
        class="absolute top-1/2 left-1/2 h-[320px] w-auto -translate-x-1/2 -translate-y-1/2 transition-all duration-500 sm:right-0 sm:left-auto sm:-translate-x-0 md:h-[350px] lg:h-[400px]"
      >
        <AnimateIn client:load>
          <Image
            src={logo}
            alt="Lunar Lifts Logo"
            class="lg:drop-shadow-lunar-primary opacity-10 blur-[2px] transition-all duration-500 md:opacity-60 md:blur-none lg:opacity-100 lg:drop-shadow-md"
            loading="eager"
          />
        </AnimateIn>
      </div>
      <AnimateIn client:load>
        <div class="flex flex-3 flex-col justify-items-center gap-8">
          <h1 class="heading-page text-shadow-lunar-white text-shadow-md">
            The Galaxy's <span class="italic">Best</span><br
              class="xs:block hidden"
            />
            <span class="font-2 text-lunar-primary drop-shadow-2xl"
              >Bounce House Rentals</span
            >
          </h1>
          <p class="subtitle text-shadow-lunar-white text-shadow-md">
            Modern equipment. Friendly crew. Stress-free setup. <br
              class="hidden sm:block"
            />
            It's not rocket scienceâ€”we just do it better
          </p>
          <LinkButton
            size="MD"
            className="self-center sm:self-start"
            href="/contact">Let's Bounce</LinkButton
          >
        </div>
      </AnimateIn>
    </div>
  </Content>
</section>
