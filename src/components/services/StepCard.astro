---
// Components
import { Image } from "astro:assets";

// Types
import type { ImageMetadata } from "astro";
export type StepCardType = {
  stepNumber?: number;
  heading: string;
  body: string[];
  src: ImageMetadata;
};

const { stepNumber, heading, body, src } = Astro.props as StepCardType;
---

<div class="flex flex-col items-stretch gap-8 md:flex-row">
  <div
    class="order-last flex flex-1 flex-col gap-8 p-8 sm:p-12 md:order-first md:p-16"
  >
    <h3 class="heading-subsection font-2 text-lunar-primary">
      <span class="heading-kicker">Step {stepNumber}:</span>
      <br />{heading}
    </h3>
    <p class="body-copy flex flex-col gap-8">
      {
        body.map((text) => (
          <>
            <span>{text}</span>
          </>
        ))
      }
    </p>
  </div>
  <div class="bg-lunar-primary flex-1">
    <Image src={src} alt="" class="h-full object-cover" />
  </div>
</div>
