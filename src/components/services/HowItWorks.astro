---
// Components
import { Content } from "@/components/shared";
import StepCard from "./StepCard.astro";
import { AnimateOnInView } from "../decorative";

// Types
import type { StepCardType } from "./StepCard.astro";

// Images
import image1 from "@/assets/images/how-it-works/step-1.jpg";
import image2 from "@/assets/images/how-it-works/step-2.jpg";
import image3 from "@/assets/images/how-it-works/step-3.jpg";
import image4 from "@/assets/images/how-it-works/step-4.jpg";

const steps: StepCardType[] = [
  {
    heading: "Reach out & book",
    body: [
      "Pick your bounce. Hit us up. Done.",
      "Use our quick form, shoot us an email, or give us a callâ€” whatever's easiest for you. We'll confirm your date, help you choose the right setup, and lock it in.",
    ],
    src: image1,
    alt: "Customer calling Lunar Lifts to book a bounce house rental for a summer party.",
  },
  {
    heading: "We deliver & set up",
    body: [
      "We show up. We handle it. You chill.",
      "We bring your inflatable to you, set it up safely and professionally, and make sure everything's good to go before your guests arrive. No stress, no nonsense.",
    ],
    src: image2,
    alt: "Lunar Lifts delivery van driving on the highway with a bounce house rental.",
  },
  {
    heading: "You have a great party",
    body: [
      "You laugh. You celebrate. You win.",
      "The kids bounce, the adults hang out, and you finally get to enjoy the party without worrying about a thing.",
    ],
    src: image3,
    alt: "Kids playing on a Lunar Lifts bounce house at a backyard party.",
  },
  {
    heading: "We come pack it up",
    body: [
      "We come back. We pack it up. You don't lift a finger.",
      "When the party's over, we'll tear it down, clean it up, and leave your space exactly how we found it.",
    ],
    src: image4,
    alt: "Lunar Lifts driver heading to pick up a bounce house rental after the party.",
  },
];
---

<section class="section bg-gradient-dark">
  <Content>
    <div class="text-lunar-white flex flex-col gap-8">
      <h2 class="heading-section font-2">How it works</h2>
      <p class="subtitle max-w-3xl">
        Booking a bounce house in New Mexico shouldn't be harder than hosting
        the party. Here's how we keep it simple:
      </p>
    </div>
    <ul>
      {
        steps.map((card, index) => (
          <AnimateOnInView client:load>
            <li class="bg-lunar-white shadow-lunar-white/30 mt-24 shadow-2xl">
              <StepCard stepNumber={index + 1} {...card} />
            </li>
          </AnimateOnInView>
        ))
      }
    </ul>
  </Content>
</section>
